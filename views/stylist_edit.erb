<h1>Edit: <%= @stylist.stylist_name() %></h1>

<form action="/stylists/<%= @stylist.id() %>/edit" method="post">

  <input type="hidden" name="_method" value="patch">

  <label for="stylist_name">New Name</label>
  <input type="text" name="stylist_name" id="stylist_name">

  <button type="submit">Edit stylist</button>

</form>

<h3>Delete Stylist</h3>

<form action="/stylists/<%= @stylist.id() %>" method="post">
  <input type="hidden" name="_method" value="delete">
  <button type="submit">Delete</button>
</form>

<a href="/stylists">Back to list of stylists</a><br>
